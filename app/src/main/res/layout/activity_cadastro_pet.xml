<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.CadastroPet">

    <ImageView
    android:id="@+id/logo_tela_principal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.627"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/logo_conecte_app" />

    <Button
        android:id="@+id/buttonUserTelaCadastro"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-20dp"
        android:background="#00FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="x"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_user_24"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/logo_tela_principal"
        app:layout_constraintEnd_toEndOf="@+id/logo_tela_principal"
        app:layout_constraintTop_toTopOf="@+id/logo_tela_principal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:layout_marginTop="32dp"
        android:text="Cadastro do Pet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_tela_principal"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutCadastroPet"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVoltarParaTelaInicial"
        style="@style/Button"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCadastrarPet"
        style="@style/Button"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:text="Cadastrar Pet"
        app:layout_constraintBottom_toTopOf="@+id/buttonVoltarParaTelaInicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayoutCadastroPet"
        android:layout_width="409dp"
        android:layout_height="330dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonCadastrarPet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.522">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nome do pet" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Data de nascimento" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Espécie" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tipo Sanguíneo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="É castrado?" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>